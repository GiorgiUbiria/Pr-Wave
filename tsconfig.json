{
    "compilerOptions": {
        "experimentalDecorators": true,
        "useDefineForClassFields": false,
        "allowSyntheticDefaultImports": true,
        "module": "es2020",
        "baseUrl": "src",
        "types": [
            "astro/client"
        ],
        "paths": {
            "@config": [
                "config/*"
            ],
            "@icons": [
                "icons/*"
            ],
            "@lib/*": [
                "lib/*"
            ],
            "@utils/*": [
                "utils/*"
            ],
            "@components/*": [
                "components/*"
            ],
            "@layouts/*": [
                "layouts/*"
            ],
            "@assets/*": [
                "assets/*"
            ],
            "@pages/*": [
                "pages/*"
            ],
            "@styles/*": [
                "styles/*"
            ]
        }
    }
}
