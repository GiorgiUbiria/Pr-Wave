---
import Layout from '../../../layouts/Page.astro';
import Card from '../../../components/cards/Card.astro';
import { ThreeColumnTextSection, Container } from '@components/odyssey-theme';

import {courses} from './courses'

export const prerender = true;

const seo = {
	title: 'Courses | Pr Wave',
	description: 'Courses Page',
};
---

<Layout {seo}>
	<Container>
		<ThreeColumnTextSection>
			<div slot="column-1-body">
				<Card
                    title={courses[0].title}
                    description={courses[0].description}
                    url={courses[0].url}
                />
			</div>
			<div slot="column-2-body">
				<Card
                    title={courses[1].title}
                    description={courses[1].description}
                    url={courses[1].url}
                />
			</div>
			<div slot="column-3-body">
				<Card
                    title={courses[2].title}
                    description={courses[2].description}
                    url={courses[2].url}
                />
			</div>
		</ThreeColumnTextSection>
	</Container>
</Layout>
