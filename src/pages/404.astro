---
import { Button, Container, TextCardSection } from '@components/odyssey-theme';
import { Image } from 'astro:assets';
import Layout from '../layouts/Page.astro';
import NotFoundImage from '../images/404.webp';

const seo = {
	title: 'Page Not Found | Pr Wave.',
	description:
		'Page Not Found | Pr Wave. This is the 404 page for the Pr Wave.',
};
---

<Layout {seo}>
	<Container>
		<TextCardSection>
			<h1>404</h1>
			<h2>გვერდი ვერ მოიძებნა 👀</h2>
			<div class="cta-buttons__container">
				<Button href="/">დაბრუნება</Button>
			</div>
			<Image src={NotFoundImage} alt="404" width={400} height={400} />
		</TextCardSection>
	</Container>
</Layout>

<style>
	.cta-buttons__container {
		display: flex;
		flex-wrap: wrap;
	}
	.cta-buttons__container :global(a) {
		margin-right: 1rem;
		margin-bottom: 1rem;
	}
	.code-buttons__container {
		margin: 1rem auto;
		display: flex;
		flex-wrap: wrap;
	}
	.code-buttons__container > a {
		margin-right: 1rem;
		margin-bottom: 1rem;
	}
</style>
