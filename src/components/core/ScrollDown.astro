<button class="button" onclick="scrollToSection('sticky-text-image__section')">
	<svg viewBox="0 0 384 512" class="svgIcon">
		<path
			d="M214.6 470.6c-12.5 12.5-32.8 12.5-45.3 0l-160-160c-12.5-12.5-12.5-32.8 0-45.3s32.8-12.5 45.3 0L160 370.8V64c0-17.7 14.3-32 32-32s32 14.3 32 32v306.8l129.4-105.4c12.5-12.5 32.8-12.5 45.3 0s12.5 32.8 0 45.3l-160 160z"
		></path>
	</svg>
</button>

<script is:inline>
	function scrollToSection(sectionID) {
		var section = document.getElementById(sectionID);
		section.scrollIntoView({
			behavior: 'smooth',
			block: 'start',
			inline: 'nearest',
		});
	}
</script>

<style>
	.button {
		width: 50px;
		height: 50px;
		border-radius: 50%;
		background-color: rgb(20, 20, 20);
		border: none;
		font-weight: 600;
		display: flex;
		align-items: center;
		justify-content: center;
		box-shadow: 0px 0px 0px 4px rgba(180, 160, 255, 0.253);
		cursor: pointer;
		transition-duration: 0.3s;
		overflow: hidden;
		position: relative;
	}

	.svgIcon {
		width: 12px;
		transition-duration: 0.3s;
	}

	.svgIcon path {
		fill: white;
	}

	.button:hover {
		width: 140px;
		border-radius: 50px;
		transition-duration: 0.3s;
		background-color: rgb(181, 160, 255);
		align-items: center;
	}

	.button:hover .svgIcon {
		transition-duration: 0.3s;
		transform: translateY(200%);
	}

	.button::before {
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		content: 'ჩასვლა';
		color: white;
		transition-duration: 0.3s;
		font-size: 0px;
	}

	.button:hover::before {
		font-size: 16px;
		opacity: 1;
		top: unset;
		bottom: 0;
		transition-duration: 0.3s;
	}
</style>
