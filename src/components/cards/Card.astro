---
const { url, title, description } = Astro.props;
---

<div class="card-hover">
	<div class="card-hover__content">
		<h3 class="card-hover__title">
			<span>{title}</span>
		</h3>
		<p class="card-hover__text">
			{description}
		</p>
		<a href={url} class="card-hover__link">
			<span style="font-size: 0.75rem">გაიგეთ მეტი</span>
			<svg
				fill="none"
				viewBox="0 0 24 24"
				stroke-width="1.5"
				stroke="currentColor"
			>
				<path
					stroke-linecap="round"
					stroke-linejoin="round"
					d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3"></path>
			</svg>
		</a>
	</div>
	<div class="card-hover__extra">
		<h4>Learn <span>now</span> and get <span>40%</span> discount!</h4>
	</div>
	<img
		src="https://media.licdn.com/dms/image/D4D12AQEHS6hye0GrJw/article-cover_image-shrink_600_2000/0/1683508310783?e=2147483647&v=beta&t=IFY-_w5I8GhwXz_I12tX7uR-itl7MlxPD8pyOqfFfQA"
		alt=""
	/>
</div>

<style>
	.card-hover {
		width: 360px;
		height: 500px;
		position: relative;
		overflow: hidden;
		box-shadow: 0 0 32px -10px rgba(0, 0, 0, 0.48);
		border-radius: 1rem;
	}

	.card-hover:hover .card-hover__content,
	.card-hover:active .card-hover__content {
		background-color: var(--theme-surface-1);
		color: var(--theme-on-surface-1);
		bottom: 100%;
		transform: translateY(100%);
		padding: 50px 60px;
		transition: all 0.3s cubic-bezier(0.1, 0.72, 0.4, 0.97);
	}

	.card-hover:hover .card-hover__link,
	.card-hover:active .card-hover__link {
		opacity: 1;
		transform: translate(-50%, 0);
		transition: all 0.2s 0.3s cubic-bezier(0.1, 0.72, 0.4, 0.97);
	}

	.card-hover img {
		transform: scale(1);
		transition: transform 0.3s cubic-bezier(0.1, 0.72, 0.4, 0.97);
	}

	.card-hover__content {
		width: 100%;
		text-align: center;
		background-color: var(--theme-surface-2);
		color: var(--theme-on-surface-2);
		padding: 0 60px 50px;
		position: absolute;
		bottom: 0;
		left: 0;
		transform: translateY(0);
		transition: all 0.3s 0.3s cubic-bezier(0.1, 0.72, 0.4, 0.97);
		will-change: bottom, background-color, transform, padding;
		z-index: 1;
	}

	.card-hover__content::before,
	.card-hover__content::after {
		content: '';
		width: 100%;
		height: 120px;
		background-color: inherit;
		position: absolute;
		left: 0;
		z-index: -1;
	}

	.card-hover__content::before {
		top: -80px;
		clip-path: ellipse(60% 80px at bottom center);
	}

	.card-hover__content::after {
		bottom: -80px;
		clip-path: ellipse(60% 80px at top center);
	}

	.card-hover__title {
		font-size: 1.05rem;
		margin-bottom: 0.75em;
	}

	.card-hover__title span {
		color: #2d7f0b;
	}

	.card-hover__text {
		font-size: 0.75rem;
	}

	.card-hover__link {
		position: absolute;
		bottom: 1rem;
		left: 50%;
		transform: translate(-50%, 10%);
		display: flex;
		flex-wrap: wrap;
		align-items: center;
		text-decoration: none;
		color: #2d7f0b;
		opacity: 0;
		padding: 10px;
		transition: all 0.3s;
	}

	.card-hover__link:hover svg,
	.card-hover__link:active svg {
		transform: translateX(4px);
	}

	.card-hover__link svg {
		width: 18px;
		margin-left: 4px;
		transition: transform 0.2s;
	}

	.card-hover__extra {
		height: 50%;
		position: absolute;
		display: flex;
		align-items: center;
		justify-content: center;
		flex-direction: column;
		width: 100%;
		font-size: 1.5rem;
		text-align: center;
		background-color: #86b971;
		padding: 80px;
		bottom: 0;
		z-index: 0;
		color: #dee8c2;
		transform: translateY(100%);
		will-change: transform;
		transition: transform 0.3s;
	}

	.card-hover__extra span {
		color: #2d7f0b;
	}

	.card-hover img {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		object-fit: cover;
		object-position: center;
		z-index: -1;
		transform: scale(1.2);
		transition: transform 0.3s cubic-bezier(0.1, 0.72, 0.4, 0.97);
	}
</style>
