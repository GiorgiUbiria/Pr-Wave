---
import {
	Button,
	FormInput,
	FormTextarea,
	FormRadio,
} from '@components/odyssey-theme';
---

<form name="Contact Form" method="POST">
    <h3>კურსზე რეგისტრაცია</h3>
	<FormInput
		required="true"
		type="text"
		label="სახელი"
		name="Name"
		placeholder="John Doe"
	/>
	<FormInput
		required="true"
		type="tel"
		label="ტელეფონის ნომერი"
		name="Phone"
		placeholder="+995 555 555 555"
	/>
	<FormInput
		type="email"
		label="ელ. ფოსტა"
		name="Email"
		placeholder="template@example.com"
		required="true"
	/>
	<FormRadio
		label="გაქვთ გამოცდილება სოციალური მედიის მართვის მიმართულებით?"
		required="true"
		name="Experience"
	/>
	<FormTextarea
		label="მოკლედ მოგვიყევით,  რა მოლოდინი გაქვთ კურსიდან და სილაბუსის რომელი ნაწილი უფრო გაინტერესებთ  💙"
		name="Interest"
		placeholder="პასუხი..."
	/>
	<Button>რეგისტრაცია</Button>
</form>

<style>
	form {
		display: grid;
		grid-template-columns: 1fr;
        background-color: var(--theme-surface-1);
        border-radius: var(--theme-shape-radius);
		gap: 1rem;
        padding: 1rem;
	}
</style>
